{
  "name": "opennotes-discord",
  "version": "0.0.2",
  "description": "Minimal Discord bot for Open Notes community notes",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "types:generate": "openapi-typescript ../opennotes-server/openapi.json -o src/lib/generated-types.ts",
    "prebuild": "pnpm types:generate",
    "build": "tsc && cp src/lib/openapi-schemas.json dist/lib/openapi-schemas.json",
    "dev": "tsx watch src/index.ts",
    "dev:sharded": "tsx watch src/shard-entrypoint.ts",
    "start": "node dist/index.js",
    "start:sharded": "node dist/shard-entrypoint.js",
    "deploy:commands": "pnpm build && node scripts/register-commands.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit -p tsconfig.typecheck.json",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --ci --forceExit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:schemas": "NODE_OPTIONS=--experimental-vm-modules jest tests/schema-validation.test.ts",
    "schemas:extract": "node --loader ts-node/esm scripts/extract-openapi-schemas.ts",
    "schemas:validate": "ENABLE_SCHEMA_VALIDATION=true pnpm test:schemas"
  },
  "dependencies": {
    "@opennotes/shared-types": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "discord.js": "^14.24.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "nanoid": "^5.1.6",
    "nats": "^2.29.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@opennotes/test-utils": "workspace:*",
    "@types/express": "^4.17.25",
    "@types/ioredis-mock": "^8.2.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "ioredis-mock": "^8.13.1",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.10.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "discord",
    "bot",
    "community-notes",
    "minimal"
  ],
  "author": "",
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "tmp": ">=0.2.4",
      "js-yaml": ">=4.1.1"
    }
  }
}
