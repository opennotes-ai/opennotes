# Discord Bot Configuration
# Copy this file to .env.yaml and replace placeholder values with your actual credentials
#
# Development Environment:
#   - Uses OpenTofu (infrastructure/environments/local/) to manage services
#   - Services accessed via localhost (ports exposed by OpenTofu containers)
#   - Start environment with: mise run dev
#
# Testing:
#   - Tests use docker-compose.yml via testcontainers
#   - Environment variables injected by test framework
#   - Not for direct manual usage

DISCORD_TOKEN: your_discord_bot_token_here
DISCORD_CLIENT_ID: your_discord_client_id_here
SERVER_URL: "http://localhost:8000"
NODE_ENV: development
LOG_LEVEL: info

# These are typically auto-configured by OpenTofu/testcontainers but can be overridden
# DATABASE_URL: "postgresql://opennotes:opennotes_password@localhost:5432/opennotes"
# REDIS_URL: "redis://localhost:6379"
# NATS_URL: "nats://localhost:4222"
# OPENNOTES_SERVICE_URL: "http://localhost:8000"
