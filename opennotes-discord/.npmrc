# pnpm configuration
# Use isolated node_modules structure (default, but explicit)
node-linker=isolated

# Disable shameful hoisting for strict dependency resolution
# This prevents phantom dependencies
shamefully-hoist=false

# Store directory (default is ~/.pnpm-store)
# Uncomment to use a project-local store
# store-dir=.pnpm-store

# Auto-install peer dependencies
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Use workspace protocol for monorepo packages
link-workspace-packages=true

# Shared lockfile for workspace
shared-workspace-lockfile=true
